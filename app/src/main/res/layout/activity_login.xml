<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/login_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/logo"
                android:gravity="bottom"
                 android:layout_marginBottom="@dimen/l_margin"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_margin"
                    android:layout_marginRight="@dimen/m_margin"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter phone number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/xs_padding"
                        android:drawableLeft="@drawable/ic_phone_icon"
                        android:maxLength="15" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_margin"
                    android:layout_marginRight="@dimen/m_margin"
                    android:textColorHint="@color/white">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Password"
                        android:imeOptions="actionDone"
                        android:drawablePadding="@dimen/xs_padding"
                        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:maxLength="15" />
                </android.support.design.widget.TextInputLayout>
                <TextView android:id="@+id/forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/l_margin"
                    android:layout_marginBottom="@dimen/l_margin"
                    android:layout_marginRight="@dimen/m_margin"
                    android:text="Forgot Password"/>
                <Button
                    android:id="@+id/submit_bttn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_margin"
                    android:layout_marginRight="@dimen/m_margin"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/border_color_bacground"
                    android:text="Sign In"
                    android:textSize="@dimen/mediumText"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/m_margin"
                    android:layout_marginRight="@dimen/m_margin"
                    android:layout_marginTop="@dimen/m_margin"
                    android:textAllCaps="false"
                    android:textSize="@dimen/mediumText"
                    android:background="@drawable/border_color_bacground"
                    android:text="@string/register" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>
</LinearLayout>